<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relLayout"
    tools:context="com.sterlingryan.dental_care.BrushYourTeeth"
    tools:showIn="@layout/activity_brush_your_teeth">

    <!--MESSAGE TEXT-->
    <TextView
        android:id="@+id/messageText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="You should brush your teeth at least twice a day. At what time do you want to be reminded?"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"

        android:layout_marginTop="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <!--ALERT 1-->
    <TextView
        android:id="@+id/Alert1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Alert 1"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@id/messageText"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/Time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="08:00"
        android:textSize="25dp"

        android:layout_below="@id/messageText"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="100dp"/>

    <!--ALERT 2-->
    <TextView
        android:id="@+id/Alert2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Alert 2"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@id/Alert1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/Time2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="21:00"
        android:textSize="25dp"

        android:layout_below="@id/Alert1"
        android:layout_marginTop="30dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"/>

    <Button
        android:id="@+id/time2DeleteButton"
        android:layout_width="70dp"
        android:layout_height="40dp"

        android:text="Delete"
        android:textSize="12dp"

        android:layout_below="@id/Alert1"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <!--ALERT 3-->
    <TextView
        android:id="@+id/Alert3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Alert 3"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@id/Alert2"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"

        android:visibility="gone"/>

    <TextView
        android:id="@+id/Time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="00:00"
        android:textSize="25dp"

        android:layout_below="@id/Alert2"
        android:layout_marginTop="30dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"

        android:visibility="gone"/>

    <Button
        android:id="@+id/time3DeleteButton"
        android:layout_width="70dp"
        android:layout_height="40dp"

        android:text="Delete"
        android:textSize="12dp"

        android:layout_below="@id/Alert2"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:visibility="gone"/>

    <!--ALERT 4-->
    <TextView
        android:id="@+id/Alert4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Alert 4"
        android:textSize="25dp"
        android:textAppearance="?android:attr/textAppearanceLarge"

        android:layout_below="@id/Alert3"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"

        android:visibility="gone"/>

    <TextView
        android:id="@+id/Time4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="00:00"
        android:textSize="25dp"

        android:layout_below="@id/Alert3"
        android:layout_marginTop="30dp"

        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"

        android:visibility="gone"/>

    <Button
        android:id="@+id/time4DeleteButton"
        android:layout_width="70dp"
        android:layout_height="40dp"

        android:text="Delete"
        android:textSize="12dp"

        android:layout_below="@id/Alert3"
        android:layout_marginTop="24dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"

        android:visibility="gone"/>

    <!--ADD ALERT BUTTON-->
    <Button
        android:id="@+id/AddAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Add Alert"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:padding="15dp"

        android:layout_below="@id/Alert4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <!--CLICKABLE LINK-->
    <TextView
        android:id="@+id/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="See how to brush your teeth properly"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"

        android:linksClickable="true"/>



</RelativeLayout>

